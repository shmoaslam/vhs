@model VHS.Services.Models.PropertyDelete
<h3>Delete Property</h3>
<p class="sub-heading"><span class="error-msg">some error occured</span></p>
<div class="col-lg-6 col-md-6">
    @using (Ajax.BeginForm("DeleteProperty", "ManageProperty", new AjaxOptions { OnBegin = "fnBegin", HttpMethod = "Post", OnSuccess = "fnSuccess", OnFailure = "fnFailure", OnComplete = "fnComplete" }, new { @class = "form-part" }))
    {

        <label>Do you want to delete this property?</label>
        <div style="clear:both;"></div>
        @Html.HiddenFor(m => m.PropertyId)
        <div class="input-wrapper clearfix">
            <input type="submit" class="send-btn" value="Yes" id="" name="" />
            <input type="reset" class="send-btn" value="No" id="" name="" />
            <p id="imgLoader" style="color:green;display:none"><img src="~/Images/l2.gif" />please wait....</p>
        </div>

    }
</div>
<script>
    $(document).ready(function () {
        $("#loginLink").addClass("active");
    });
    //Show the Forgot Password  Div:-
    function ShowForgotPassword() {
        window.location.href = '@Url.Action("ForgotPassword", "Account")';
    }
    //Show the Success:-
    function fnBegin() {
        $('#imgLoader').show();
        //Show any loder when process start:-
    }
    function fnSuccess(response, status, xhr) {
        if (response == "1") {
            window.location.href=@Url.Action("ManageProperty", "ManageProperty");
        }
        else if (response == "0") {
            $('#imgLoader').hide();
            $("#errormessage").show();

        }
        else {
            $('#imgLoader').hide();
            alert("Please try after '")
        }
    }
    function fnFailure(xhr, status, err) {
        $('#imgLoader').hide();
        alert("'failure occured!!.Please try after '")
    }
    function fnComplete() {
        if (response != "1") {
            $('#imgLoader').hide();
        }
    }
</script>
@model VHS.Services.Models.PropertyDelete
<h3>Delete Property</h3>

<div class="col-lg-6 col-md-6">
    @using (Ajax.BeginForm("DeleteProperty", "ManageProperty", new AjaxOptions { OnBegin = "fnBegin", HttpMethod = "Post", OnSuccess = "fnSuccessDeleteProperty", OnFailure = "fnFailure", OnComplete = "fnComplete" }, new { @class = "form-part" }))
    {
        <p class="sub-heading"><span class="error-msg" style="display:none" id="errormessage">some error occured</span></p>
        <label>Do you want to delete this property?</label>
        <div style="clear:both;"></div>
        @Html.HiddenFor(m => m.PropertyId)
        <div class="input-wrapper clearfix">
            <input type="submit" class="send-btn" value="Yes" id="" name="" />
            <input type="reset" class="send-btn" value="No" id="" name="" />
            <p id="imgLoaderDelete" style="color:green;display:none"><img src="~/Images/l2.gif" />please wait....</p>
        </div>

    }
</div>
<script>
    $(document).ready(function () {
        $("#loginLink").addClass("active");
    });
    //Show the Success:-
    function fnBegin() {
        $('#imgLoaderDelete').show();
        //Show any loder when process start:-
    }
    function fnSuccessDeleteProperty(response, status, xhr) {
        if (response == "1") {
            alert('Property deleted sucessfully');
            window.location.href = '@Url.Action("ManageProperty", "ManageProperty")';
        }
        else if (response == "0") {
            $('#imgLoaderDelete').hide();

        }
        else {
            $('#imgLoaderDelete').hide();
            alert("Please try after '")
        }
    }
    function fnFailure(xhr, status, err) {
        $('#imgLoaderDelete').hide();
        alert("'failure occured!!.Please try after '")
    }
    function fnComplete() {
        if (response != "1") {
            $('#imgLoaderDelete').hide();
        }
    }
</script>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>

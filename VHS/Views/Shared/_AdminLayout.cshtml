@using VHS.Common
@using Newtonsoft.Json
@using VHS.Services
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <!--[if IE]> <meta http-equiv="X-UA-Compatible" content="IE=edge"> <![endif]-->
    <title>Velvett Homestays</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="author" content="weibergmedia">
    <meta name="Description" content="Hudson – Responsive Retina-Ready HTML5 Portfolio" />
    <link href="~/Content/admin/reset.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/admin/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/admin/contact.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/styles.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/flexslider.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/jquery.fancybox.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/magnific-popup.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/admin/responsive-mobilefirst.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="http://fonts.googleapis.com/css?family=Lato:400,400italic,600" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Playfair+Display:400,400italic,600,700" rel="stylesheet" type="text/css" />
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.datepick.css" rel="stylesheet" />
    <!--Style For progress bar during Image Uplaod:--->
    <style>
        .progress {
            position: relative;
            width: 400px;
            border: 1px solid #ddd;
            padding: 1px;
        }

        .progress-bar {
            width: 0px;
            height: 20px;
            background-color: #57be65;
        }
    </style>


</head>
<body>
    <!-- start main nav -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="~/Images/logo.png" width="100" alt="velvett homestays" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                @{
                    if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        HttpCookie userCookie = Request.Cookies[Constants.COOKIE_USER];
                        if (userCookie != null && userCookie["User"] != null)
                        {
                            string userdata = userCookie["User"];
                            var _currentUser = JsonConvert.DeserializeObject<UserInfo>(userdata);
                            if (_currentUser.UserType == 1)
                            {
                                Html.RenderPartial("_AdminMenu");
                            }
                            else if (_currentUser.UserType == 2)
                            {
                                Html.RenderPartial("_RmMenu");
                            }
                        }
                    }
                }

            </div>
        </div>
    </nav>
    <div class="jumbotron">
    </div>
    <div class="container">
        @RenderBody()

    </div>


    <footer>
        <div class="container-fluid">
            <p> Copyright © 2016. All rights reserved. </p>
        </div>
    </footer>
    <!-- end content -->
    <script src="@Url.Content("~/Scripts/jquery-1.11.2.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/AjaxPostFile.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.1/bootstrap3-typeahead.js"></script>

    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/jquery-easing-1.3.js" type="text/javascript"></script>
    <script src="~/Scripts/retina.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.touchSwipe.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.isotope2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.ba-bbq.min.js" type="text/javascript"></script>
    <script src="~/Scripts/packery-mode.pkgd.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.isotope.load.js" type="text/javascript"></script>

    <script src="~/Scripts/main2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.form.js" type="text/javascript"></script>
    <script src="~/Scripts/input.fields.js" type="text/javascript"></script>
    <script src="~/Scripts/preloader.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script defer src="~/Scripts/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.fitvids.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.plugin.js"></script>
    <script src="~/Scripts/jquery.datepick.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

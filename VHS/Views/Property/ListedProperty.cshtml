@{
    ViewBag.Title = "ListedProperty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section header-section dark">
    <div class="overlay"><img class="property-cover" src="/images/bg1.jpg" /></div>
    <div class="container clearfix">
        <div class="col-lg-6 centered aligncenter">
            <div class="centralizing-wrapper">
                <div class="centralized-content">
                    <h1>Don't just visit. <span style="color:#f06eaa">Belong.</span></h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section2 bordered">
    <div class="container clearfix">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 myfilters">
                <div class="filters-main">
                    <form class="form-part" id="" method="post" action="">
                        <label class="sm-label-filter">Category</label>
                        <select class="sm-input myselect">
                            <option value="0">Select</option>
                            <option value="Apartment">Apartment</option>
                            <option value="Beach House">Beach House</option>
                            <option value="Boat House">Boat House</option>
                            <option value="Farmhouse">Farmhouse</option>
                            <option value="Private Room">Private Room</option>
                            <option value="Villa">Villa</option>
                            <option value="Other">Other</option>
                        </select>
                        <label class="sm-label-filter">Bedrooms</label>
                        <select class="sm-input myselect">
                            <option value="0">Select</option>
                            <option value="yes">1</option>
                            <option value="yes">2</option>
                            <option value="yes">3</option>
                            <option value="yes">4</option>
                            <option value="yes">5</option>
                            <option value="yes">More than 5</option>
                        </select>
                        <button class="btn-primary">Apply</button>
                    </form>
                </div>
                <div class="sort-by">
                    <form class="form-part" id="" method="post" action="">
                        <label class="sm-label-filter">Sort by Price</label>
                        <select class="sm-input myselect">
                            <option value="0">Select</option>
                            <option value="yes">High to Low</option>
                            <option value="yes">Low to High</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <article class="element clearfix">

                @foreach (var property in Model)
                {
                    <div class="property-thumb">
                        <p class="property-thumb-img">
                            <img src="~/UploadFile/PropertyCoverPhoto/@property.CoverImage" />
                            <div class="property-price-box">
                                <span class="property-price-currency">Rs.</span><span class="property-price">@property.Price/-</span>
                            </div>
                        </p>
                        <h3 class="property-thumb-title">@property.Title</h3>
                        <p class="property-thumb-info">
                            <span class="property-category">@property.Category</span>
                            <span class="property-rooms">@property.PersonPerRoom Bedrooms</span>
                            <span class="property-guests">24 Guests</span>
                            <span class="property-rating">

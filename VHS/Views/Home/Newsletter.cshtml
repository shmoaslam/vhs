@model VHS.Services.ViewModel.NewsletterViewModel

@{
    ViewBag.Title = "News letter";
}

<section class="section header-section dark">
    <div class="overlay"><img class="property-cover" src="/images/bg2.jpg"></div>
    <div class="container clearfix">
        <div class="col-lg-6 centered aligncenter">
            <div class="centralizing-wrapper">
                <div class="centralized-content">
                    <h1>Don't just visit. <span style="color:#f06eaa">Belong.</span></h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container clearfix centered">
        <div class="col-lg-12">
            <p></p>
        <h3 class="header">Subscribe to our Newsletter</h3>
		<div class="head-underline"> </div>
		<p>Please subscribe to our newsletter and be kept abreast of all the exciting developments at our end.</p>
		<p><br/></p>
        </div>
    </div>
    <div class="container clearfix centered">
        <div class="col-lg-4 col-md-4 col-sm-9 aligncenter">
            @using (Html.BeginForm("Newsletter", "Home", FormMethod.Post, new { @class = "form-part", name = "newsletter", id = "newsletter", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <label>Name</label>
                @Html.TextBoxFor(m=>m.Name, new { name = "name", id = "name" })
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { name = "email", id = "email" })
                <div class="input-wrapper clearfix">
                    <input type="submit" class="send-btn" value="Subscribe" id="submit" name="Subscribe">
                    <span id="message"></span>
                </div>
            }
        </div>
    </div>
</section>


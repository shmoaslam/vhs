<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@model VHS.Services.Models.RMCreationMailer
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Mailer</title>
    <style>
        .panel {
            background: rgba(5, 188, 219, 0.15);
            border: 1px solid #05BCDB;
            padding: 10px !important;
        }

        .fa {
            color: #05BCDB !important;
        }

        .logo {
            width: 250px;
            height: 50px;
            margin: 12px 1px 1px 12px;
        }
    </style>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
</head>

<body bgcolor="#8d8e90">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#8d8e90">
        <tr>
            <td>
                <table width="600" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" align="center">
                    <tr>
                        <td align="center">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 8px solid #05BCDB;"></td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="10%">&nbsp;</td>
                                    <td width="80%" align="left" valign="top">
                                        <font style="font-family: Georgia, 'Times New Roman', Times, serif; color:#010101; font-size:24px"><strong><em>Hi @Model.Name,</em></strong></font><br />
                                        <br />
                                        <font style="font-family: Verdana, Geneva, sans-serif; color:#666766; font-size:13px; line-height:21px">
                                            <p class="panel">
                                                @{
                                                    WriteLiteral(Model.Name);
                                                }
                                            </p>
                                            <p class="panel">
                                                @{
                                                    WriteLiteral(Model.Description);
                                                }
                                            </p>
                                            <p class="panel">
                                                @{
                                                    WriteLiteral(Model.Link);
                                                }
                                            </p>

                                        </font>
                                    </td>
                                    <td width="10%">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 8px solid #05BCDB;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>

@model VHS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<section class="section">
    <div class="container clearfix centered">
        <div class="col-lg-12">
            <h3>Change password</h3>
            <div class="head-underline"> </div>
        </div>
    </div>
    <div class="container clearfix centered">
        <div class="col-lg-4 col-md-4 col-sm-12 aligncenter">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-part", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Email)
                @Html.ValidationSummary()
                <label>Enter New Password</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", size = "30", title = "password" })
                <label>Confirm Password</label>
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", size = "30", title = "password" })
                <div class="input-wrapper clearfix text-center">
                    <input type="submit" class="send-btn" value="Submit" id="submit" name="Submit">
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

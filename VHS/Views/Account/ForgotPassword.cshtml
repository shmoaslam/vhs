@model VHS.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<section class="section">
    <div class="container clearfix centered">
        <div class="col-lg-12">
            <h3>Forgot password</h3>
            <div class="head-underline"> </div>
        </div>
    </div>
    <div class="container clearfix centered">
        <div class="col-lg-4 col-md-4 col-sm-12 aligncenter">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <label>Enter your email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", size = "30", title = "email" })

                <div class="input-wrapper clearfix text-center">
                    <input type="submit" class="send-btn" value="Submit" id="submit" name="Submit">
                </div>
            }
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

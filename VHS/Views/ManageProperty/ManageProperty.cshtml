@model List<VHS.Services.ViewModel.PropertyViewModel>
@{
    ViewBag.Title = "ManageProperty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="section">
    <div class="row">
        <div class="col-md-6 pull-left">
            <form class="form-part" id="" method="post" action="">
                <label class="sm-label">Bulk action<span class="required">*</span></label>
                <select class="sm-input myselect">
                    <option value="0">select</option>
                    <option value="yes">Delete</option>
                </select>
                <button class="btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-6 pull-right">
            <form class="form-part" id="" method="post" action="">
                <table class="table-responsive">
                    <tr>
                        <td><label>Search properties: </label></td>
                        <td>
                            <input class="search-pro" type="text">
                            <button class="btn-primary">Search</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th class="check-column"><label><b>Property ID</b></th>
                    <th class="info-td"><b>Property Name</b></th>
                    <th colspan="3"><b>Actions</b></th>

                </tr>
                @*<tr>
                        <th class="check-column"><label><input type="checkbox"><span>PID0000001</span></label></th>
                        <td class="info-td">Property 1, Alibag</td>
                        <td class="sm-td">Edit</td>
                        <td class="sm-td">Transfer</td>
                        <td class="sm-td">Delete</td>

                    </tr>*@
                @foreach (var item in Model)
                {
                    <tr>
                        <th class="check-column"><label><input type="checkbox"><span>@item.PropertyId</span></label></th>
                        <td class="info-td">@item.PropertyName</td>
                        <td class="sm-td">@Html.ActionLink("Edit", "EditProperty", "ManageProperty", new { @id = item.PropertyId }, null)</td>
                        <td class="sm-td">Transfer</td>
                        <td class="sm-td">@Html.ActionLink("Delete", "DeleteProperty", "ManageProperty", new { @id = item.PropertyId })</td>
                    </tr>
                }


            </table>
        </div>
    </div>
</div>
